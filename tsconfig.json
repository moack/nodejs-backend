{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "**/*.test.ts",
        "jest.config.ts"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}